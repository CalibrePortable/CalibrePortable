<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:background="@color/CONCRETE">


    <ImageView
        android:id="@+id/iv_book_icon"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/GREEN_SEA"/>

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="书名"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_book_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="作者"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_book_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_book_author"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="类型"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/tv_book_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_book_type"
        android:layout_below="@+id/tv_book_type"
        android:layout_marginTop="10dp"
        android:text="edit"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_book_pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_book_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="版次"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/tv_book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_book_pub"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/tv_book_pub"
        android:text="价格"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_book_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_book_pub"
        android:layout_below="@+id/tv_book_pub"
        android:layout_marginTop="20dp"
        android:text="info"/>


</RelativeLayout>