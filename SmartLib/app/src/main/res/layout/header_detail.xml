<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/CONCRETE"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="?attr/actionBarSize">


  <ImageView
      android:background="@color/GREEN_SEA"
      android:id="@+id/iv_book_icon"
      android:layout_marginTop="10dp"
      android:layout_marginRight="20dp"
      android:layout_alignParentRight="true"
      android:layout_width="70dp"
      android:layout_height="120dp"/>

  <TextView
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"
      android:id="@+id/tv_book_name"
      android:layout_alignParentLeft="true"
      android:textSize="14sp"
      android:text="书名"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>


  <TextView
      android:id="@+id/tv_book_publisher"
      android:layout_marginTop="10dp"
      android:layout_below="@+id/tv_book_name"
      android:layout_alignLeft="@+id/tv_book_name"
      android:textSize="14sp"
      android:text="出版社"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      android:layout_marginTop="10dp"
      android:layout_below="@+id/tv_book_publisher"
      android:layout_alignLeft="@+id/tv_book_publisher"
      android:id="@+id/tv_book_author"
      android:textSize="14sp"
      android:text="作者"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>


  <TextView
      android:layout_marginTop="10dp"
      android:id="@+id/tv_book_price"
      android:layout_below="@+id/tv_book_author"
      android:layout_alignLeft="@+id/tv_book_author"
      android:textSize="14sp"
      android:text="价格"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>


</RelativeLayout>