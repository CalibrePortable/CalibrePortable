<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    app:cardBackgroundColor="@color/cardview_light_background"
                                    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="5dp">


        <ImageView
            android:id="@+id/iv_book_icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_book_icon"
            android:text="书名"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_book_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_book_name"
            android:layout_below="@+id/tv_book_name"
            android:text="描述"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_book_favour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_book_favourite"
            android:gravity="center"
            android:textColor="@drawable/book_favour_text_color"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/tv_add_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_book_favour"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_book_favour"
            android:text="+1"
            android:textColor="@color/POMEGRANATE"
            android:textSize="14sp"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>