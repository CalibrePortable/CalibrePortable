<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.geeklub.smartlib">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".GlobalContext"
      android:allowBackup="true"
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme">


    <!--登陆-->
    <activity
        android:name=".module.common.login.LoginActivity"
        android:screenOrientation="portrait">

      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>

    </activity>


    <!--注册-->
    <activity
        android:name=".module.common.register.RegisterActivity">

    </activity>

    <!--设置-->
    <activity
        android:name=".module.common.settings.SettingsActivity"
        android:launchMode="singleTop"
        android:theme="@style/AppTheme.ToolBarStyle"
        android:screenOrientation="portrait">
    </activity>


    <!--密码修改-->

    <activity
        android:name=".module.common.ModifyPasswordActivity"
        android:parentActivityName=".module.common.settings.SettingsActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.ToolBarStyle">

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="org.geeklub.smartlib.SettingsActivity"/>

    </activity>

    <!--用户的MainActivity-->

    <activity
        android:name=".module.user.NormalUserMainActivity"
        android:launchMode="singleTop"
        android:configChanges="screenSize|orientation"
        android:label="@string/app_name">

      <meta-data
          android:name="android.app.default_searchable"
          android:value=".module.common.search.SearchResultsActivity"/>

    </activity>


    <activity
        android:name=".module.common.search.SearchResultsActivity"
        android:configChanges="orientation|screenSize"
        android:launchMode="singleTop">

      <meta-data
          android:name="android.app.searchable"
          android:resource="@xml/searchable"/>


      <intent-filter>
        <action android:name="android.intent.action.SEARCH"/>
      </intent-filter>


    </activity>


    <activity
        android:name=".module.user.detail.BookDetailActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.ToolBarStyle">

    </activity>


  </application>

</manifest>
